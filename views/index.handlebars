<h1>BURGERS!</h1>


<div class="row">
  <div class="row-left">

<h2>DEVOUR ME!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false name=burger_name}} <!-- passes burger name to li block -->
    {{/unless}}
  {{/each}}
  
</ul>
  </div>
  <div class="row-right">

<h2>DEVOURED</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=true  name=burger_name}}
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>


<h2>Add a Burger</h2>
<form class="add-form">

  <div class="form-group">
    <label for="new-burger">New Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

 

  <button type="submit">ADD BURGER</button>
</form>














