<h1>BURGERS! BURGERS! BURGERS!</h1>

<div class = "container">
<div class="row">
  <div class="row-left">

<h2>DEVOUR ME!</h2>

<ul class = "burger-emoji">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false name=burger_name}} <!-- passes burger name to li block -->
    {{/unless}}
  {{/each}}
  
</ul>
  </div>
<div class = "image">
  <img src = "https://image.freepik.com/free-vector/hamburger-ingredients_98292-3567.jpg" height = "300" width = "300">
</div>

  <div class="row-right">

<h2>DEVOURED</h2>

<ul class = "burger-emoji">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=true  name=burger_name}}
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
</div>

<form class="add-form">



  <div class="form-group">
    <label for="new-burger"><h1>CREATE A BURGER:</h1></label>
    <input type="text" id="burg" name="name">
  </div>

 

  <button class = "button" type="submit">ADD BURGER</button>
</form>
















